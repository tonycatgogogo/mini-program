/**index.wxss**/

.index-container {
  width: 100%;
  position: relative;
}

/* topBar */

.topBar {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  z-index: 99;
  color: #ccc;
}

.icon_category, .icon_search {
  position: absolute;
  top: 0;
  width: 40px;
  height: 44px;
  text-align: center;
  line-height: 44px;
  font-size: 14px;
}

.icon_category {
  left: 0;
}

.icon_search {
  right: 0;
}

.topBar form {
  width: 100%;
  height: 44px;
  padding: 5px 40px;
  display: block;
  position: absolute;
  overflow: hidden;
  box-sizing: border-box;
}

.topBar form input {
  width: 100%;
  padding: 2px 2px 0 32.5px;
  border: 0;
  border-radius: 15px;
  box-sizing: border-box;
  height: 30px;
  line-height: 30px;
  background: rgba(255, 255, 255, 0.8);
  font-size: 12px;
  color: #999;
}

/* 轮播图 */

.index-banner, .index-banner swiper, .index-banner image {
  width: 100%;
  height: 350rpx;
}

/* 导航栏 */
.index-nav {
  display: flex;
  flex-wrap: wrap;
}
.index-nav .nav-item {
  width: 33.333%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #ccc;
  font-size: 14px;
}
.index-nav .nav-item image {
  display: block;
  width: 102rpx;
  height: 102rpx;
}
/* 入口模块 */
.index-enter {
  display: flex;
  padding: 20rpx 25rpx;
}
.index-enter .enter-item {
  width: 50%;
  display: flex;
  justify-content: center;
}
.index-enter .enter-item image {
  height: 178rpx;
  width: 320rpx;
}