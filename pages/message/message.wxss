/* pages/message/message.wxss */
page {
    background-color: #f1f1f1;
}

.card {
    background-color: #FFF;
    border: 1px solid #ddd;
    border-radius: 15rpx;
    margin: 20rpx 20rpx;
    padding: 20rpx 30rpx;
    display: flex;
    flex-direction: column;
}

.card-title {
    font-size: 16px;
    margin-bottom: 20rpx;
}

.card-date {
    font-size: 14px;
    color: #ccc;
    padding-bottom: 20rpx;
    border-bottom: 1px solid #ddd;
    margin-bottom: 20rpx;
}

.card-img {
    width: 100%;
    height: 300rpx
}

.card-desc {
    font-size: 16px;
    color: #444;
    padding-bottom: 20rpx;
    border-bottom: 1px solid #ddd;
    margin: 20rpx 0;
}

.card-read {
    font-size: 14px;
    color: #666;
}